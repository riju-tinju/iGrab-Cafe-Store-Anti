<script>
    let selectedExecutive = null;
let currentOrderId = null;
let allExecutives = [];
let filteredExecutives = [];
let showSavedOnly = false;
let currentBranchInfo = null;

// Main function called when button is clicked
async function selectDeliveryExecutive(orderId) {
  currentOrderId = orderId;
  selectedExecutive = null;
  showSavedOnly = false;
  
  // Reset UI state
  document.getElementById('executiveSearch').value = '';
  document.getElementById('toggleSavedBtn').classList.remove('active');
  
  // Show modal
  document.getElementById('deliveryExecutiveModal').style.display = 'flex';
  
  // Reset assign button
  const assignBtn = document.getElementById('assignBtn');
  assignBtn.disabled = true;
  
  // Show skeleton loading
  showSkeletonLoading();
  
  try {
    await fetchDeliveryExecutives();
  } catch (error) {
    console.error('Error fetching delivery executives:', error);
    showErrorMessage('Failed to load delivery executives. Please try again.');
  }
}

// Show skeleton loading animation
function showSkeletonLoading() {
  const container = document.getElementById('deliveryExecutivesList');
  container.innerHTML = '';
  
  // Create skeleton for current branch
  const currentBranchSkeleton = document.createElement('div');
  currentBranchSkeleton.className = 'branch-group';
  currentBranchSkeleton.innerHTML = `
    <div class="branch-group-header">
      <div class="skeleton-name" style="width: 150px; height: 20px; background-color: #e2e2e2; border-radius: 4px;"></div>
    </div>
  `;
  
  // Add skeleton items for current branch
  for (let i = 0; i < 3; i++) {
    const skeletonItem = document.createElement('div');
    skeletonItem.className = 'skeleton-item';
    skeletonItem.innerHTML = `
      <div class="skeleton-avatar"></div>
      <div class="skeleton-content">
        <div class="skeleton-name"></div>
        <div class="skeleton-details"></div>
      </div>
    `;
    currentBranchSkeleton.appendChild(skeletonItem);
  }
  
  container.appendChild(currentBranchSkeleton);
  
  // Create skeleton for other branches
  const otherBranchSkeleton = document.createElement('div');
  otherBranchSkeleton.className = 'branch-group';
  otherBranchSkeleton.innerHTML = `
    <div class="branch-group-header">
      <div class="skeleton-name" style="width: 180px; height: 20px; background-color: #e2e2e2; border-radius: 4px;"></div>
    </div>
  `;
  
  // Add skeleton items for other branches
  for (let i = 0; i < 2; i++) {
    const skeletonItem = document.createElement('div');
    skeletonItem.className = 'skeleton-item';
    skeletonItem.innerHTML = `
      <div class="skeleton-avatar"></div>
      <div class="skeleton-content">
        <div class="skeleton-name"></div>
        <div class="skeleton-details"></div>
      </div>
    `;
    otherBranchSkeleton.appendChild(skeletonItem);
  }
  
  container.appendChild(otherBranchSkeleton);
}

// Fetch delivery executives from API
async function fetchDeliveryExecutives() {
  try {
    const response = await fetch('/api/orders/delivery-executives', {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json',
        // Add auth headers if needed
        // 'Authorization': `Bearer ${getAuthToken()}`
      }
    });

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const result = await response.json();
    
    if (result.success && result.data) {
      allExecutives = result.data;
      currentBranchInfo = result.data.currentBranch;
      filteredExecutives = getAllExecutivesList();
      updateSavedCount();
      displayDeliveryExecutives();
    } else {
      throw new Error(result.message || 'Failed to fetch delivery executives');
    }
    
  } catch (error) {
    console.error('Fetch error:', error);
    showErrorMessage(error.message || 'Network error occurred');
  }
}

// Get combined list of all executives
function getAllExecutivesList() {
  const current = allExecutives.currentBranchExecutives || [];
  const other = allExecutives.otherBranchExecutives || [];
  return [...current, ...other];
}

// Update saved executives count
function updateSavedCount() {
  const savedCount = getAllExecutivesList().filter(exec => exec.isSaved).length;
  const countElement = document.querySelector('.saved-count');
  countElement.textContent = savedCount;
  countElement.classList.toggle('zero', savedCount === 0);
}

// Toggle saved executives filter
function toggleSavedFilter() {
  showSavedOnly = !showSavedOnly;
  const toggleBtn = document.getElementById('toggleSavedBtn');
  toggleBtn.classList.toggle('active', showSavedOnly);
  
  applyFilters();
}

// Apply search and saved filters
function applyFilters() {
  const searchTerm = document.getElementById('executiveSearch').value.toLowerCase().trim();
  const allExecs = getAllExecutivesList();
  
  filteredExecutives = allExecs.filter(exec => {
    // Apply saved filter
    if (showSavedOnly && !exec.isSaved) {
      return false;
    }
    
    // Apply search filter
    if (searchTerm) {
      const nameMatch = exec.name.toLowerCase().includes(searchTerm);
      const phoneMatch = exec.phone && exec.phone.includes(searchTerm);
      const branchMatch = exec.branches && exec.branches.some(branch => 
        branch.name.toLowerCase().includes(searchTerm)
      );
      
      if (!nameMatch && !phoneMatch && !branchMatch) {
        return false;
      }
    }
    
    return true;
  });
  
  displayDeliveryExecutives();
}

// Display delivery executives in the modal
function displayDeliveryExecutives() {
  const container = document.getElementById('deliveryExecutivesList');
  container.innerHTML = '';
  
  if (showSavedOnly) {
    displaySavedExecutives();
    return;
  }
  
  // Group filtered executives by current/other branch
  const currentBranchExecs = filteredExecutives.filter(exec => 
    allExecutives.currentBranchExecutives.includes(exec)
  );
  const otherBranchExecs = filteredExecutives.filter(exec => 
    allExecutives.otherBranchExecutives.includes(exec)
  );
  
  // Display current branch group
  displayBranchGroup(
    container, 
    'Current Branch Executives', 
    currentBranchExecs, 
    true
  );
  
  // Display other branch group
  displayBranchGroup(
    container, 
    'Other Branch Executives', 
    otherBranchExecs, 
    false
  );
  
  // Show no results message if needed
  if (filteredExecutives.length === 0) {
    showNoResultsMessage(container);
  }
}

// Display saved executives only
function displaySavedExecutives() {
  const container = document.getElementById('deliveryExecutivesList');
  
  if (filteredExecutives.length === 0) {
    container.innerHTML = `
      <div class="no-results">
        <i class="fas fa-heart-broken"></i>
        <h4>No Saved Executives</h4>
        <p>You haven't saved any delivery executives yet.</p>
      </div>
    `;
    return;
  }
  
  // Create saved executives group
  const savedGroup = document.createElement('div');
  savedGroup.className = 'branch-group';
  savedGroup.innerHTML = `
    <div class="branch-group-header">
      <h4 class="branch-group-title">
        <i class="fas fa-heart" style="color: #ff6b6b; margin-right: 8px;"></i>
        Saved Executives
      </h4>
      <span class="branch-group-count">${filteredExecutives.length}</span>
    </div>
  `;
  
  filteredExecutives.forEach(exec => {
    const execItem = createExecutiveItem(exec, false);
    savedGroup.appendChild(execItem);
  });
  
  container.appendChild(savedGroup);
}

// Display branch group
function displayBranchGroup(container, title, executives, isCurrentBranch) {
  const group = document.createElement('div');
  group.className = 'branch-group';
  
  // Create group header
  const header = document.createElement('div');
  header.className = 'branch-group-header';
  header.innerHTML = `
    <h4 class="branch-group-title">${title}</h4>
    <span class="branch-group-count">${executives.length}</span>
  `;
  group.appendChild(header);
  
  // Handle empty current branch
  if (isCurrentBranch && executives.length === 0) {
    const notification = document.createElement('div');
    notification.className = 'empty-branch-notification';
    notification.innerHTML = `
      <i class="fas fa-info-circle"></i>
      <div><strong>No executives available in current branch</strong></div>
      <div>Please check other branch executives below</div>
    `;
    group.appendChild(notification);
  }
  
  // Add executives
  executives.forEach(exec => {
    const execItem = createExecutiveItem(exec, !isCurrentBranch);
    group.appendChild(execItem);
  });
  
  if (executives.length > 0 || isCurrentBranch) {
    container.appendChild(group);
  }
}

// Create individual executive item
function createExecutiveItem(exec, showBranches) {
  const execItem = document.createElement('div');
  execItem.className = `delivery-exec-item ${getStatusAvailability(exec.status) ? '' : 'unavailable'}`;
  execItem.dataset.execId = exec.id;
  
  // Create branch info string for other branch executives
  const branchInfo = showBranches && exec.branches ? 
    `<div class="exec-branches">
      <i class="fas fa-map-marker-alt"></i> 
      ${exec.branches.map(branch => branch.name).join(', ')}
    </div>` : '';
  
  execItem.innerHTML = `
    <img src="${exec.avatar || '/default-avatar.png'}" alt="${exec.name}" class="exec-avatar" 
         onerror="this.src='/default-avatar.png'">
    <div class="exec-info">
      <div class="exec-name">${exec.name}</div>
      <div class="exec-details">
        <span><i class="fas fa-phone"></i> ${exec.phone || 'N/A'}</span>
        <span><i class="fas fa-box"></i> Orders: ${exec.currentOrders || 0}/${exec.todayOrders || 0}</span>
        ${exec.rating ? `<span><i class="fas fa-star"></i> ${exec.rating}</span>` : ''}
        <span class="exec-status ${getStatusClass(exec.status)}">
          ${getStatusIcon(exec.status)} ${capitalizeFirst(exec.status || 'busy')}
        </span>
      </div>
      ${branchInfo}
    </div>
    <button class="save-heart-btn ${exec.isSaved ? 'saved' : ''}" 
            onclick="toggleSaveExecutive(event, '${exec.id}')" 
            title="${exec.isSaved ? 'Remove from saved' : 'Save executive'}">
      <i class="fas fa-heart"></i>
    </button>
  `;
  
  // Add click event listener only if available
  if (getStatusAvailability(exec.status)) {
    execItem.addEventListener('click', (e) => {
      // Don't select if clicking on heart button
      if (!e.target.closest('.save-heart-btn')) {
        selectExecutive(exec, execItem);
      }
    });
  }
  
  return execItem;
}

// Get status availability
