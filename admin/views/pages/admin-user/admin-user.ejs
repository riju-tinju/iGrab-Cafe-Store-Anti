            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-bold text-red-800">Delete Admin User</h3>
                <button type="button" class="text-gray-500 hover:text-gray-700 p-2" onclick="closeModal('deleteModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="space-y-4">
                <div class="flex items-center space-x-3 p-4 bg-red-50 rounded-lg">
                    <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
                    <div>
                        <h4 class="font-semibold text-red-800">Are you sure?</h4>
                        <p class="text-sm text-red-700">This action cannot be undone. The admin will lose access immediately.</p>
                    </div>
                </div>
                <div class="p-4 bg-gray-50 rounded-lg">
                    <p class="text-sm text-gray-700 mb-2">Admin details:</p>
                    <div id="deleteAdminDetails" class="text-sm font-medium text-gray-900">
                        <!-- Admin details will be populated -->
                    </div>
                </div>
                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" onclick="closeModal('deleteModal')"
                        class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button type="button" id="confirmDeleteBtn"
                        class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                        <span class="btn-text">Delete Admin</span>
                        <span class="btn-loading hidden">
                            <div class="loading-spinner"></div>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notification Container -->
    <div id="toastContainer"></div>

    <script>
        // API Configuration and State Management
        const API_BASE_URL = '/api';
        let currentPage = 1;
        let admins = [];
        let branches = [];
        let selectedBranches = [];
        let editingAdminId = null;

        // Admin API Class
        class AdminAPI {
            static async fetchAdmins(params = {}) {
                try {
                    const queryParams = new URLSearchParams({
                        page: params.page || currentPage,
                        limit: params.limit || 10
                    });

                    const response = await fetch(`${API_BASE_URL}/admin-users?${queryParams}`);

                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();

                    if (!data.success) {
                        throw new Error(data.message || 'API returned unsuccessful response');
                    }

                    return data;
                } catch (error) {
                    console.error('Fetch Admins Error:', error);
                    throw error;
                }
            }

            static async fetchBranches() {
                try {
                    const response = await fetch(`${API_BASE_URL}/branches/available`);

                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();

                    if (!data.success) {
                        throw new Error(data.message || 'Failed to fetch branches');
                    }

                    return data;
                } catch (error) {
                    console.error('Fetch Branches Error:', error);
                    throw error;
                }
            }

            static async createAdmin(adminData) {
                try {
                    const response = await fetch(`${API_BASE_URL}/admin-users`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(adminData)
                    });

                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(errorData.message || `HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error('Create Admin Error:', error);
                    throw error;
                }
            }

            static async updateAdmin(adminId, adminData) {
                try {
                    const response = await fetch(`${API_BASE_URL}/admin-users/${adminId}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(adminData)
                    });

                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(errorData.message || `HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error('Update Admin Error:', error);
                    throw error;
                }
            }

            static async deleteAdmin(adminId) {
                try {
                    const response = await fetch(`${API_BASE_URL}/admin-users/${adminId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(errorData.message || `HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error('Delete Admin Error:', error);
                    throw error;
                }
            }

            static async toggleAdminStatus(adminId, isActive) {
                try {
                    const response = await fetch(`${API_BASE_URL}/admin-users/${adminId}/status`, {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ isActive })
                    });

                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(errorData.message || `HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error('Toggle Admin Status Error:', error);
                    throw error;
                }
            }

            static async checkEmailAvailability(email, excludeId = null) {
                try {
                    const queryParams = new URLSearchParams({ email });
                    if (excludeId) {
                        queryParams.append('excludeId', excludeId);
                    }

                    const response = await fetch(`${API_BASE_URL}/admin-users/check-email?${queryParams}`);

                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }

                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error('Check Email Error:', error);
                    throw error;
                }
            }
        }

        // Toast Notification Manager
        class ToastManager {
            static show(message, type = 'success', duration = 3000) {
                const toast = document.createElement('div');
                toast.className = `toast ${type}`;
                toast.innerHTML = `
                    <div class="flex items-center">
                        <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-exclamation-triangle'} mr-2"></i>
                        <span>${message}</span>
                    </div>
                `;

                document.getElementById('toastContainer').appendChild(toast);

                setTimeout(() => toast.classList.add('show'), 100);

                setTimeout(() => {
                    toast.classList.remove('show');
                    setTimeout(() => toast.remove(), 300);
                }, duration);
            }
        }

        // UI State Management
        class UIManager {
            static showLoading() {
                document.getElementById('loadingState').classList.remove('hidden');
                document.getElementById('adminsContainer').classList.add('hidden');
                document.getElementById('errorState').classList.add('hidden');
                document.getElementById('emptyState').classList.add('hidden');
            }

            static showError(message = 'Something went wrong') {
                document.getElementById('errorMessage').textContent = message;
                document.getElementById('errorState').classList.remove('hidden');
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('adminsContainer').classList.add('hidden');
                document.getElementById('emptyState').classList.add('hidden');
            }

            static showEmpty() {
                document.getElementById('emptyState').classList.remove('hidden');
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('adminsContainer').classList.add('hidden');
                document.getElementById('errorState').classList.add('hidden');
            }

            static showAdmins() {
                document.getElementById('adminsContainer').classList.remove('hidden');
                document.getElementById('loadingState').classList.add('hidden');
                document.getElementById('errorState').classList.add('hidden');
                document.getElementById('emptyState').classList.add('hidden');
            }
        }

        // Template Rendering
        class TemplateRenderer {
            static renderStatsCards(stats) {
                const statsContainer = document.getElementById('statsCards');
                statsContainer.innerHTML = `
                    <div class="bg-white p-4 rounded-lg shadow-sm border fade-in">
                        <div class="flex items-center">
                            <div class="brand-teal text-white p-3 rounded-lg">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm text-gray-600">Total Admins</p>
                                <p class="text-xl font-bold">${stats.totalAdmins || 0}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg shadow-sm border fade-in">
                        <div class="flex items-center">
                            <div class="bg-green-500 text-white p-3 rounded-lg">
                                <i class="fas fa-user-check"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm text-gray-600">Active</p>
                                <p class="text-xl font-bold">${stats.activeAdmins || 0}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="bg-white p-4 rounded-lg shadow-sm border fade-in">
                        <div class="flex items-center">
                            <div class="bg-red-500 text-white p-3 rounded-lg">
                                <i class="fas fa-user-times"></i>
                            </div>
                            <div class="ml-4">
                                <p class="text-sm text-gray-600">Inactive</p>
                                <p class="text-xl font-bold">${stats.inactiveAdmins || 0}</p>
                            </div>
                        </div>
                    </div>
                `;
            }

            static renderDesktopTable(admins) {
                const tbody = document.getElementById('adminsTableBody');
                tbody.innerHTML = '';

