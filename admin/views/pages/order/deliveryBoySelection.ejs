// Toggle save executive
async function toggleSaveExecutive(event, executiveId) {
  event.stopPropagation();
  
  const heartBtn = event.currentTarget;
  const isSaved = heartBtn.classList.contains('saved');
  
  // Show loading state
  heartBtn.classList.add('saving');
  
  try {
    const response = await fetch(`/api/delivery-executives/${executiveId}/toggle-save`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        // Add auth headers if needed
      }
    });

    const result = await response.json();
    
    if (response.ok && result.success) {
      // Update local state
      const executive = getAllExecutivesList().find(exec => exec.id === executiveId);
      if (executive) {
        executive.isSaved = result.data.isSaved;
      }
      
      // Update UI
      heartBtn.classList.toggle('saved', result.data.isSaved);
      heartBtn.title = result.data.isSaved ? 'Remove from saved' : 'Save executive';
      
      // Update saved count
      updateSavedCount();
      
      // Refresh display if showing saved only and executive was unsaved
      if (showSavedOnly && !result.data.isSaved) {
        applyFilters();
      }
      
    } else {
      throw new Error(result.message || 'Failed to save executive');
    }
    
  } catch (error) {
    console.error('Save toggle error:', error);
    // You can show a toast notification here
    alert('Failed to save executive. Please try again.');
  } finally {
    heartBtn.classList.remove('saving');
  }
}

// Handle executive selection
function selectExecutive(executive, element) {
  // Remove previous selection
  document.querySelectorAll('.delivery-exec-item.selected').forEach(item => {
    item.classList.remove('selected');
  });
  
  // Add selection to current item
  element.classList.add('selected');
  selectedExecutive = executive;
  
  // Enable assign button
  document.getElementById('assignBtn').disabled = false;
}

// Assign selected delivery executive
async function assignDeliveryExecutive() {
  if (!selectedExecutive || !currentOrderId) {
    alert('Please select a delivery executive');
    return;
  }
  
  const assignBtn = document.getElementById('assignBtn');
  const originalText = assignBtn.innerHTML;
  
  // Show loading state
  assignBtn.disabled = true;
  assignBtn.innerHTML = '<span class="loading-spinner"></span>Assigning...';
  
  try {
    const response = await fetch(`/api/orders/${currentOrderId}/assign-delivery`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        // Add auth headers if needed
      },
      body: JSON.stringify({
        deliveryExecutiveId: selectedExecutive.id
      })
    });

    const result = await response.json();
    
    if (response.ok && result.success) {
      // Success - update UI and close modal
      showSuccessMessage('Delivery executive assigned successfully!');
      updateOrderRow(currentOrderId, selectedExecutive);
      closeDeliveryModal();
    } else {
      throw new Error(result.message || 'Failed to assign delivery executive');
    }
    
  } catch (error) {
    console.error('Assignment error:', error);
    showErrorMessage(error.message || 'Failed to assign delivery executive');
  } finally {
    // Reset button state
    assignBtn.disabled = false;
    assignBtn.innerHTML = originalText;
  }
}

// Update the order row in the table after successful assignment
function updateOrderRow(orderId, executive) {
  const button = document.querySelector(`button[onclick="selectDeliveryExecutive('${orderId}')"]`);
  if (button) {
    button.innerHTML = `${executive.name} <i class="fas fa-chevron-down fa-sm"></i>`;
  }
}

// Close modal
function closeDeliveryModal() {
  document.getElementById('deliveryExecutiveModal').style.display = 'none';
  selectedExecutive = null;
  currentOrderId = null;
  showSavedOnly = false;
  
  // Reset search and filters
  document.getElementById('executiveSearch').value = '';
  document.getElementById('toggleSavedBtn').classList.remove('active');
}

