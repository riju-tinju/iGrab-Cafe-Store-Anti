<%- include('../../partials/Header') %>

  <head>
    <style>
      /* Form Styles */
      .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        border: 1px solid #e0e0e0;
        background-color: white;
        transition: all 0.3s ease;
        margin-bottom: 1rem;
      }

      .form-input:focus {
        border-color: var(--accent-gold);
        box-shadow: 0 0 0 2px rgba(214, 156, 78, 0.2);
        outline: none;
      }

      .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--text-black);
      }

      .contact-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
      }

      .contact-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      }

      .social-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--primary-green);
        color: white;
        margin-right: 0.75rem;
        transition: all 0.3s ease;
      }

      .social-icon:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        background-color: var(--accent-gold);
      }

      .map-container {
        height: 300px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
      }

      @media (min-width: 768px) {
        .map-container {
          height: 400px;
        }
      }

      .inquiry-option {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
        border-radius: 0.5rem;
        border: 2px solid #e0e0e0;
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .inquiry-option:hover {
        border-color: var(--accent-gold);
      }

      .inquiry-option.active {
        border-color: var(--primary-green);
        background-color: rgba(0, 63, 46, 0.05);
      }

      .inquiry-option input {
        margin-right: 0.5rem;
      }

      /* Desktop Optimizations */
      @media (min-width: 1024px) {
        .main-container {
          margin-top: 80px;
          padding: 0 2rem;
        }

        .contact-grid {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 2rem;
        }
      }
    </style>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        // Handle inquiry option selection
        const inquiryOptions = document.querySelectorAll('.inquiry-option');
        inquiryOptions.forEach(option => {
          option.addEventListener('click', function () {
            // Clear all active states
            inquiryOptions.forEach(o => o.classList.remove('active'));
            // Set this option as active
            this.classList.add('active');
            // Check the radio button
            const radio = this.querySelector('input[type="radio"]');
            if (radio) radio.checked = true;
          });
        });

        // Form submission
        const contactForm = document.getElementById('contact-form');
        contactForm.addEventListener('submit', function (e) {
          e.preventDefault();
          // In a real scenario, you'd send the form data to your server
          // For now, just show a success message
          showToast('Your message has been sent successfully!');
          contactForm.reset();
          // Uncheck inquiry options
          inquiryOptions.forEach(o => o.classList.remove('active'));
        });

        // Copy address to clipboard
        // const copyBtn = document.getElementById('copy-address');
        // copyBtn.addEventListener('click', function () {
        //   const address = document.getElementById('store-address').innerText;
        //   navigator.clipboard.writeText(address).then(() => {
        //     showToast('Address copied to clipboard!');
        //   });
        // });
        // Copy address to clipboard
        const copyBtn = document.getElementById('copy-address');
        copyBtn.addEventListener('click', function () {
          const addressElements = document.getElementsByClassName('store-address');
          const addresses = Array.from(addressElements).map(el => el.innerText);
          const joinedAddress = addresses.join('\n'); // Join with newline, or use ', ' for comma separation

          navigator.clipboard.writeText(joinedAddress).then(() => {
            showToast('Address copied to clipboard!');
          });
        });
      });
    </script>
  </head>

