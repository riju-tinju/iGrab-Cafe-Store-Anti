                    <i class="fas fa-user-plus mr-2"></i>Add New Admin
                </button>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 mb-6" id="statsCards">
                <!-- Stats will be populated by JavaScript -->
            </div>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="hidden bg-white rounded-lg shadow-sm border p-8">
            <div class="flex flex-col items-center justify-center">
                <div class="loading-spinner mb-4"></div>
                <p class="text-gray-600">Loading admin users...</p>
            </div>
        </div>

        <!-- Error State -->
        <div id="errorState" class="hidden error-state rounded-lg border p-8">
            <div class="flex flex-col items-center justify-center text-center">
                <i class="fas fa-exclamation-triangle text-4xl text-red-500 mb-4"></i>
                <h3 class="text-lg font-semibold text-red-800 mb-2">Something went wrong</h3>
                <p class="text-red-600 mb-4" id="errorMessage">Failed to load admin users. Please try again.</p>
                <button id="retryBtn" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition-colors">
                    <i class="fas fa-redo mr-2"></i>Retry
                </button>
            </div>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="hidden empty-state rounded-lg border p-8">
            <div class="flex flex-col items-center justify-center text-center">
                <i class="fas fa-users text-4xl text-gray-400 mb-4"></i>
                <h3 class="text-lg font-semibold text-gray-700 mb-2">No admin users found</h3>
                <p class="text-gray-500 mb-4">Start by creating your first admin user.</p>
                <button id="createFirstAdminBtn" class="brand-teal hover:brand-teal-light text-white px-4 py-2 rounded-lg transition-colors">
                    <i class="fas fa-user-plus mr-2"></i>Create First Admin
                </button>
            </div>
        </div>

        <!-- Admin Users Grid/Table -->
        <div id="adminsContainer" class="bg-white rounded-lg shadow-sm border">
            <!-- Desktop Table View -->
            <div class="hidden lg:block overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b">
                        <tr>
                            <th class="text-left p-4 font-semibold text-gray-900">Admin Details</th>
                            <th class="text-left p-4 font-semibold text-gray-900">Contact Info</th>
                            <th class="text-left p-4 font-semibold text-gray-900">Assigned Branches</th>
                            <th class="text-left p-4 font-semibold text-gray-900">Status</th>
                            <th class="text-left p-4 font-semibold text-gray-900">Created</th>
                            <th class="text-left p-4 font-semibold text-gray-900">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="adminsTableBody">
                        <!-- Admin users will be populated by JavaScript -->
                    </tbody>
                </table>
            </div>

            <!-- Mobile Card View -->
            <div class="lg:hidden" id="adminsMobileView">
                <!-- Admin users will be populated by JavaScript -->
            </div>
        </div>

        <!-- Pagination -->
        <div class="mt-6 flex flex-col sm:flex-row items-center justify-between" id="paginationContainer">
            <div class="text-sm text-gray-700 mb-4 sm:mb-0" id="paginationInfo">
                <!-- Pagination info will be populated -->
            </div>
            <div class="flex items-center space-x-2" id="paginationButtons">
                <!-- Pagination buttons will be populated -->
            </div>
        </div>
    </main>

    <!-- Add/Edit Admin Modal -->
    <div id="adminModal" class="modal">
        <div class="modal-content">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-xl font-bold text-gray-900" id="modalTitle">Add New Admin</h3>
                <button type="button" class="text-gray-500 hover:text-gray-700 p-2" onclick="closeModal('adminModal')">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="adminForm">
